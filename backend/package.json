{
	"name": "taskify-server",
	"version": "1.0.0",
	"scripts": {
		"dev": "dotenv -e .env -- tsx src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"db:generate": "dotenv -e .env -- drizzle-kit generate --config src/drizzle.config.ts",
		"db:migrate": "dotenv -e .env -- tsx src/db/migrate.ts",
		"db:push": "dotenv -e .env -- drizzle-kit push --config src/drizzle.config.ts",
		"db:reset": "rm -rf drizzle && pnpm db:generate && pnpm db:migrate",
		"db:studio": "drizzle-kit studio",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint:fix": "biome lint --fix .",
		"check": "biome check .",
		"check:fix": "biome check --fix ."
	},
	"dependencies": {
		"@libsql/client": "^0.6.1",
		"@paralleldrive/cuid2": "^3.1.0",
		"@trpc/client": "10.45.2",
		"@trpc/server": "10.45.2",
		"bcryptjs": "^2.4.3",
		"cookie": "^1.0.2",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.30.10",
		"express": "^4.18.2",
		"express-rate-limit": "^8.1.0",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.2",
		"node-postgres": "^0.6.2",
		"pg": "^8.16.3",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.7",
		"@types/bcryptjs": "^2.4.6",
		"@types/cookie-parser": "^1.4.9",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/node": "^20.10.5",
		"@types/pg": "^8.15.5",
		"dotenv-cli": "^11.0.0",
		"drizzle-kit": "^0.21.4",
		"tsx": "^4.6.2",
		"typescript": "^5.3.3"
	}
}
